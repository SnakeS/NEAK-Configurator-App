<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/textview_aboutTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_title"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
        
    <TextView
        android:id="@+id/textview_aboutDescription"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
        android:text="@string/about_description"
        android:textColor="#ededff"
        android:autoLink="web"/>
    
    <TextView
	    android:id="@+id/textview_aboutCoding"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    android:text="@string/about_coding_title"
	    android:textAppearance="?android:attr/textAppearanceMedium"/>
	
	<TextView
	    android:id="@+id/textview_coder1"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    android:text="@string/about_coder1"/>
	
	<TextView
	    android:id="@+id/textview_coder2"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    android:text="@string/about_coder2"/>
	        
	<TextView
	    android:id="@+id/textview_aboutCopyright"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    android:text="@string/about_copyright"
	    android:textAppearance="?android:attr/textAppearanceMedium"/>
	
	<TextView
	    android:id="@+id/textview_aboutKernelVersion"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    android:text="@string/about_kernel_version_text"/>

	<Button
	    android:id="@+id/button_aboutClose"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/about_button_text"/>

</LinearLayout>